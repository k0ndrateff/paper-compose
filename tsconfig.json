    "target": "ES2020",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "preserveShebang": true,
    "noImplicitAny": false,
    "jsx": "react"
  },
  "include": ["src"]
}
