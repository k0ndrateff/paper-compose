{
  "name": "paper-compose",
  "version": "0.4.2",
  "description": "Compose DOCX from Markdown files.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "paper-compose": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts ./test.md",
    "start": "node dist/index.js test.md",
    "release": "release-it",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "mdast": "^2.3.2",
    "release-it": "^19.0.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "docx": "^9.5.1",
    "image-size": "^2.0.2",
    "remark": "^15.0.1",
    "typograf": "^7.4.4"
  }
}
